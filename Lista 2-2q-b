#include <cstdlib>
#include <iostream>

using namespace std;

int main()
{
    //system("clear");
    
    int i;
    float vet_soma[5], vet_1[5], vet_2[5];

    cout << "*** Somador de 2 Vetores de 5 posicoes ver1.0 ***" << endl;
    cout << "            *** by Rubem Diego ***" << endl;
    cout << "Digite 5 numeros do primeiro vetor de cada vez. Pressione ENTER:" << endl;
    
    for (i=0;i<5;i++)
    {
        cout << "Digite o numero " << i+1 << ":" << endl;
        cin >> vet_1[i]; 
    }
    
    cout << "Agora digite 5 numeros do segundo vetor de cada vez. Pressione ENTER:" << endl;
    
    for (i=0;i<5;i++)
    {
        cout << "Digite o numero " << i+1 << ":" << endl;
        cin >> vet_2[i]; 
    }
    
    for (i=0;i<5;i++)
    {
        vet_soma[i] = vet_1[i] + vet_2[i];
    }
    
    for (i=0;i<5;i++)
    {
        cout << "O vetor soma eh: " << vet_soma[i] << endl;
    }
    system("pause");
    
    return 0;
}
