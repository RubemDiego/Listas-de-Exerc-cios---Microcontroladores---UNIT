#include <iostream>
#include <string.h>

using namespace std;

int main()
{
    system("clear");
  
    char str1[50], str2[50];
    
    int i, j = 0;
  
    cout << "*** Inversao de sequencia de caracteres ver1.0 ***" << endl;
    cout << "         *** by Rubem Diego ***" << endl;
    cout << "\nDigite a sequencia em Hexadecimal. Depois pressione ENTER:\n" << endl;
  
    cin >> str1;
    //gets (str1);
  
    for(int i = (strlen(str1) - 1); i >= 0; i--)
    {
        str2[j] = str1[i];
        j++;
    }
    
    str2[j]=0;
    
    cout << str2 << endl;
    
    return 0;

    system("pause");
}
